<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.GamemodeSelectActivity"
        android:layout_margin="25px">

    <TextView
            android:text="Select your Gamemode"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/gameSelectTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="40sp" app:layout_constraintBottom_toTopOf="@+id/singleplayerButton"
            app:layout_constraintEnd_toStartOf="@+id/customRulesButton" android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/customRulesButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@android:drawable/ic_menu_agenda"
        app:layout_constraintBottom_toTopOf="@+id/singleplayerButton"
        app:layout_constraintEnd_toStartOf="@+id/settingsButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
            android:src="@android:drawable/ic_menu_manage"
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:id="@+id/settingsButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/singleplayerButton" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Singleplayer"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/singleplayerButton"
            app:layout_constraintTop_toBottomOf="@+id/gameSelectTitle" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/localMultiplayerButton"
            app:layout_constraintHorizontal_bias="1.0" android:textStyle="bold"
            android:textSize="32sp"/>
    <Button
            android:text="Local Multiplayer"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/localMultiplayerButton"
            app:layout_constraintTop_toBottomOf="@+id/singleplayerButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/onlineMultiplayerButton" android:textSize="32sp"
            android:textStyle="bold"
    />
    <Button
            android:text="Online Multiplayer"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/onlineMultiplayerButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/localMultiplayerButton" android:textSize="32sp"
            android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>