<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.GamemodeSelectActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="false"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/white"
        android:cropToPadding="false"
        android:paddingTop="10dp"
        android:scaleType="centerInside"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logobopitmix" />

    <ImageView
        android:id="@+id/waveView5"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/wave_bg"
        android:rotation="180"
        android:scaleType="fitXY"
        android:scaleX="1.4"
        android:scaleY="2"
        android:translationY="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_wave_1" />

    <ImageView
        android:id="@+id/waveView7"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/wave_bg"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_wave_2" />

    <ImageView
        android:id="@+id/waveView6"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/wave_bg"
        android:scaleType="fitXY"
        android:translationZ="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/ic_bg" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/customRulesButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/primary_variant"
        android:elevation="5dp"
        android:stateListAnimator="@null"
        android:translationZ="5dp"
        app:layout_constraintEnd_toStartOf="@+id/settingsButton"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_baseline_rule_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:alpha="1"
            android:text="Minigames"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/primary_variant"
        android:elevation="5dp"
        android:src="@drawable/ic_baseline_settings_24"
        android:stateListAnimator="@null"
        android:translationZ="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <info.hoang8f.widget.FButton
        android:id="@+id/singleplayerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:drawableLeft="@drawable/ic_baseline_play_arrow_24"
        android:drawablePadding="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="50dp"
        android:text="Singleplayer"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:fButtonColor="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waveView5"
        fbutton:cornerRadius="100dp"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="@color/primary"
        android:letterSpacing="0.1"
        android:text="Multiplayer"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waveView5" />

    <info.hoang8f.widget.FButton
        android:id="@+id/localMultiplayerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="60dp"
        android:drawableStart="@drawable/ic_baseline_nearby_24"
        android:drawablePadding="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="50dp"
        android:text="Nearby"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:fButtonColor="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        fbutton:cornerRadius="100dp"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/onlineMultiplayerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="130dp"
        android:drawableStart="@drawable/ic_baseline_group_24"
        android:drawablePadding="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="50dp"
        android:text="Online"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:fButtonColor="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        fbutton:cornerRadius="100dp"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp" />

    <ImageButton
        android:id="@+id/achievments"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/primary_variant"
        android:elevation="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_trophy"
        android:stateListAnimator="@null"
        app:tint="#FFFFFF"
        android:translationZ="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settingsButton" />

    <ImageButton
        android:id="@+id/leaderboardsButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/primary_variant"
        android:elevation="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_baseline_leaderboard_24"
        android:stateListAnimator="@null"
        android:translationZ="5dp"
        fbutton:layout_constraintEnd_toStartOf="@+id/achievments"
        fbutton:layout_constraintTop_toBottomOf="@id/settingsButton" />

</androidx.constraintlayout.widget.ConstraintLayout>